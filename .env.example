# ==========================================
# E-COMMERCE APPLICATION - ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env and update with your values
# NEVER commit .env file to version control!

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ecommerce_db

# ==========================================
# SECURITY KEYS
# ==========================================
# Session secret - MUST be at least 32 characters
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-this-min-32-chars-long-please

# JWT secret for API authentication - MUST be at least 32 characters
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-change-this-also-min-32-characters-longqwdqwoefjq20jripodepoqgjnrfpoiqgnj3ipournhdfioqewni   uqneio

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Environment: development, production, or test
NODE_ENV=development

# Port number for the server
PORT=5000

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:5000

# ==========================================
# PASSWORD & AUTHENTICATION
# ==========================================
# BCrypt hashing rounds (10-12 recommended, higher = slower but more secure)
BCRYPT_ROUNDS=12

# ==========================================
# RATE LIMITING
# ==========================================
# Time window for rate limiting in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per IP in the time window
RATE_LIMIT_MAX_REQUESTS=300

# Maximum login attempts before lockout
AUTH_RATE_LIMIT_MAX=5

# ==========================================
# SESSION CONFIGURATION
# ==========================================
# Session expiration time in milliseconds (default: 24 hours)
SESSION_MAX_AGE=86400000

# ==========================================
# LOGGING
# ==========================================
# Log level: error, warn, info, verbose, debug
LOG_LEVEL=info

# ==========================================
# PRODUCTION-ONLY SETTINGS
# ==========================================
# Set these only in production environment

# Enable HTTPS redirect (true/false)
# FORCE_HTTPS=true

# Database SSL mode (disable for local, require for production)
# DB_SSL_MODE=require

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# OPTIONAL FEATURES
# ==========================================
# Email service for notifications (future feature)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Payment gateway (future feature)
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ==========================================
# DEVELOPMENT TOOLS
# ==========================================
# Enable detailed error messages in development
DEBUG=false