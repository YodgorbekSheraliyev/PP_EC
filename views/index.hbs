<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> header}}

    <div class="container mt-4">
        <div class="jumbotron bg-light p-5 rounded">
            <h1 class="display-4">Welcome to Our Secure E-Commerce Store</h1>
            <p class="lead">Browse our products and shop with confidence. Your security is our priority.</p>
            {{#if user}}
                <a class="btn btn-primary btn-lg" href="/products" role="button">Shop Now</a>
            {{else}}
                <a class="btn btn-primary btn-lg" href="/auth/register" role="button">Get Started</a>
            {{/if}}
        </div>

        {{#if user}}
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">My Cart</h5>
                        <p class="card-text">View and manage your shopping cart</p>
                        <a href="/cart" class="btn btn-outline-primary">Go to Cart</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">My Orders</h5>
                        <p class="card-text">Track your order history</p>
                        <a href="/orders" class="btn btn-outline-primary">View Orders</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">My Profile</h5>
                        <p class="card-text">Manage your account settings</p>
                        <a href="/auth/profile" class="btn btn-outline-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if (eq user.role "admin")}}
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Admin Panel</h5>
                        <p class="card-text">Access administrative functions</p>
                        <a href="/admin" class="btn btn-warning">Admin Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>

    {{> footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
