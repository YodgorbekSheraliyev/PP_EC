<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SecureShop - E-Commerce Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> header}}

    <div class="container mt-4">
        <div class="jumbotron bg-light p-5 rounded">
            <h1 class="display-4">Welcome to SecureShop</h1>
            <p class="lead">Your trusted e-commerce platform with enterprise-grade security. Shop with confidence knowing your data is protected.</p>
            {{#if user}}
                <a class="btn btn-primary btn-lg" href="/products" role="button">Browse Products</a>
            {{else}}
                <a class="btn btn-primary btn-lg me-2" href="/auth/register" role="button">Get Started</a>
                <a class="btn btn-outline-primary btn-lg" href="/auth/login" role="button">Login</a>
            {{/if}}
        </div>

        {{#if user}}
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">üõí My Cart</h5>
                        <p class="card-text">View and manage your shopping cart</p>
                        <a href="/cart" class="btn btn-outline-primary">Go to Cart</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">üì¶ My Orders</h5>
                        <p class="card-text">Track your order history</p>
                        <a href="/orders" class="btn btn-outline-primary">View Orders</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">üë§ My Profile</h5>
                        <p class="card-text">Manage your account settings</p>
                        <a href="/auth/profile" class="btn btn-outline-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if (eq user.role "admin")}}
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">‚öôÔ∏è Admin Panel</h5>
                        <p class="card-text">Access administrative functions and manage the store</p>
                        <a href="/admin" class="btn btn-dark">Admin Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        <div class="row mt-5">
            <div class="col-12">
                <h3 class="text-center mb-4">Why Choose SecureShop?</h3>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="display-4 text-primary mb-3">üîí</div>
                    <h5>Secure by Design</h5>
                    <p class="text-muted">Built with security best practices following OWASP guidelines</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="display-4 text-success mb-3">‚úì</div>
                    <h5>Data Protection</h5>
                    <p class="text-muted">Your personal information is encrypted and protected</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="display-4 text-info mb-3">‚ö°</div>
                    <h5>Fast & Reliable</h5>
                    <p class="text-muted">Quick checkout process with real-time order tracking</p>
                </div>
            </div>
        </div>
    </div>

    {{> footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>