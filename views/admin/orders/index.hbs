<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Orders - SecureShop Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> header}}

    <div class="container mt-4">
        <h2>Manage Orders</h2>

        {{#if orders}}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{user_email}}</td>
                        <td>${{total_amount}}</td>
                        <td>
                            <select class="form-select form-select-sm status-select" data-order-id="{{id}}" onchange="updateStatus({{id}}, this.value)">
                                <option value="pending" {{#eq status "pending"}}selected{{/eq}}>Pending</option>
                                <option value="processing" {{#eq status "processing"}}selected{{/eq}}>Processing</option>
                                <option value="shipped" {{#eq status "shipped"}}selected{{/eq}}>Shipped</option>
                                <option value="delivered" {{#eq status "delivered"}}selected{{/eq}}>Delivered</option>
                                <option value="cancelled" {{#eq status "cancelled"}}selected{{/eq}}>Cancelled</option>
                            </select>
                        </td>
                        <td>{{created_at}}</td>
                        <td>
                            <a href="/orders/{{id}}" class="btn btn-sm btn-outline-primary">View Details</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="alert alert-info">
            No orders found.
        </div>
        {{/if}}
    </div>

    {{> footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function updateStatus(orderId, newStatus) {
            try {
                const response = await fetch(`/orders/${orderId}/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus })
                });

                if (response.ok) {
                    // Show success message
                    showAlert('Order status updated successfully', 'success');
                } else {
                    showAlert('Error updating order status', 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error updating order status', 'danger');
            }
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
</body>
</html>
