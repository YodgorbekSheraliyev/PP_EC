<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="{{csrfToken}}">
    <title>Manage Orders - SecureShop Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> header}}

    <div class="container mt-4">
        <h2>Manage Orders</h2>

        {{#if orders}}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{user.email}}</td>
                        <td>${{total_amount}}</td>
                        <td>
                            <select class="form-select form-select-sm status-select" data-order-id="{{id}}">
                                <option value="pending" {{#eq status "pending"}}selected{{/eq}}>Pending</option>
                                <option value="processing" {{#eq status "processing"}}selected{{/eq}}>Processing</option>
                                <option value="shipped" {{#eq status "shipped"}}selected{{/eq}}>Shipped</option>
                                <option value="delivered" {{#eq status "delivered"}}selected{{/eq}}>Delivered</option>
                                <option value="cancelled" {{#eq status "cancelled"}}selected{{/eq}}>Cancelled</option>
                            </select>
                        </td>
                        <td>{{created_at}}</td>
                        <td>
                            <a href="/orders/{{id}}" class="btn btn-sm btn-outline-primary">View Details</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="alert alert-info">
            No orders found.
        </div>
        {{/if}}
    </div>

    {{> footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize event listeners for status dropdowns
        document.addEventListener('DOMContentLoaded', function() {
            console.log('‚úÖ Page loaded, attaching event listeners');
            const statusSelects = document.querySelectorAll('.status-select');
            console.log(`Found ${statusSelects.length} status dropdowns`);

            statusSelects.forEach(select => {
                select.addEventListener('change', function(e) {
                    const orderId = this.dataset.orderId;
                    const newStatus = this.value;
                    console.log('üéØ Dropdown changed:', { orderId, newStatus });
                    updateStatus(orderId, newStatus);
                });
            });
        });

        async function updateStatus(orderId, newStatus) {
            console.log('üîÑ updateStatus called:', { orderId, newStatus });

            try {
                const csrfMeta = document.querySelector('meta[name="csrf-token"]');
                const csrfToken = csrfMeta?.content;

                console.log('üìç Meta tag found:', !!csrfMeta);
                console.log('üìç CSRF content:', csrfToken ? csrfToken.substring(0, 15) + '...' : 'UNDEFINED');

                if (!csrfToken) {
                    console.error('‚ùå CSRF token not found in meta tag!');
                    showAlert('Security token missing. Please refresh the page.', 'danger');
                    return;
                }

                const payload = {
                    status: newStatus,
                    _csrf: csrfToken
                };

                console.log('üì§ Sending POST request with:', {
                    url: `/orders/${orderId}/status`,
                    statusInBody: newStatus,
                    tokenLength: csrfToken.length
                });

                const response = await fetch(`/orders/${orderId}/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-csrf-token': csrfToken
                    },
                    body: JSON.stringify(payload)
                });

                console.log('üì• Response received:', {
                    status: response.status,
                    statusText: response.statusText,
                    headers: {
                        contentType: response.headers.get('content-type')
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    console.log('‚úÖ Success! Response data:', data);

                    // Update the dropdown to show the new status value
                    const select = document.querySelector(`select[data-order-id="${orderId}"]`);
                    if (select) {
                        select.value = newStatus;
                        console.log('‚úÖ Dropdown updated to show:', newStatus);
                    }

                    showAlert('‚úÖ Status updated to: ' + newStatus.toUpperCase(), 'success');
                } else {
                    let errorMsg = 'Error updating order status';
                    try {
                        const errorData = await response.json();
                        errorMsg = errorData.message || errorMsg;
                        console.error('‚ùå Error response data:', errorData);
                    } catch (e) {
                        const text = await response.text();
                        console.error('‚ùå Error response (text):', text.substring(0, 200));
                    }
                    console.error(`‚ùå Request failed with status ${response.status}: ${errorMsg}`);
                    showAlert(errorMsg, 'danger');
                }
            } catch (error) {
                console.error('‚ùå Exception caught:', error);
                showAlert('Error updating order status: ' + error.message, 'danger');
            }
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
</body>
</html>
