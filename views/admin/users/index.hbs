<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="{{csrfToken}}">
    <title>Manage Users - SecureShop Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> header}}

    <div class="container mt-4">
        <h2>Manage Users</h2>

        {{#if users}}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Orders</th>
                        <th>Joined</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{username}}</td>
                        <td>{{email}}</td>
                        <td>
                            <span class="badge {{#if (eq role "admin")}}bg-danger{{else}}bg-secondary{{/if}}">{{role}}</span>
                        </td>
                        <td>{{order_count}}</td>
                        <td>{{created_at}}</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-primary edit-role-btn" data-user-id="{{id}}" data-user-role="{{role}}">Edit Role</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="alert alert-info">
            No users found.
        </div>
        {{/if}}
    </div>

    {{> footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Modal for editing roles -->
    <div class="modal fade" id="editRolesModal" tabindex="-1" aria-labelledby="editRolesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editRolesModalLabel">Edit User Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editRolesForm">
                        <div class="mb-3">
                            <label class="form-label">Select Role:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" value="customer" id="roleCustomer">
                                <label class="form-check-label" for="roleCustomer">
                                    Customer
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" value="admin" id="roleAdmin">
                                <label class="form-check-label" for="roleAdmin">
                                    Admin
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveRoleBtn">Save Role</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentUserId = null;
        let editRoleModal = null;

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üìç Page loaded - initializing');

            // Initialize modal
            const modalElement = document.getElementById('editRolesModal');
            if (modalElement) {
                editRoleModal = new bootstrap.Modal(modalElement);
                console.log('‚úÖ Modal initialized');
            } else {
                console.error('‚ùå Modal element not found');
                return;
            }

            // Add event listener to Save Role button
            const saveBtn = document.getElementById('saveRoleBtn');
            if (saveBtn) {
                saveBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('üîò Save Role button clicked');
                    saveRoles();
                });
                console.log('‚úÖ Save Role button listener attached');
            } else {
                console.error('‚ùå Save Role button not found');
            }

            // Add event listeners to Edit Role buttons
            const editRoleButtons = document.querySelectorAll('.edit-role-btn');
            console.log('üìä Found ' + editRoleButtons.length + ' Edit Role buttons');

            editRoleButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const userId = this.dataset.userId;
                    const userRole = this.dataset.userRole;
                    console.log('üîò Edit button clicked - userId:', userId, 'userRole:', userRole);
                    editRoles(userId, userRole);
                });
            });
        });

        function editRoles(userId, currentRole) {
            try {
                console.log('üìù editRoles called with userId:', userId, 'currentRole:', currentRole);
                currentUserId = userId;

                // Reset radio buttons
                document.getElementById('roleCustomer').checked = false;
                document.getElementById('roleAdmin').checked = false;

                // Set current role
                if (typeof currentRole === 'string') {
                    if (currentRole === 'customer') {
                        document.getElementById('roleCustomer').checked = true;
                        console.log('‚úÖ Set role to customer');
                    } else if (currentRole === 'admin') {
                        document.getElementById('roleAdmin').checked = true;
                        console.log('‚úÖ Set role to admin');
                    }
                }

                // Show modal
                if (editRoleModal) {
                    editRoleModal.show();
                    console.log('‚úÖ Modal shown for user ' + currentUserId);
                } else {
                    console.error('‚ùå Modal not initialized when trying to show');
                }
            } catch (error) {
                console.error('‚ùå Error in editRoles:', error);
                alert('Error opening edit role modal: ' + error.message);
            }
        }

        async function saveRoles() {
            try {
                console.log('üíæ saveRoles function called');
                console.log('üìç currentUserId:', currentUserId);

                const selectedRole = document.querySelector('input[name="role"]:checked')?.value;
                console.log('üìç selectedRole:', selectedRole);

                if (!selectedRole) {
                    console.warn('‚ö†Ô∏è No role selected');
                    alert('Please select a role');
                    return;
                }

                const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;
                console.log('üîê CSRF Token present:', !!csrfToken);

                const requestBody = { role: selectedRole };
                console.log('üì§ Sending request with body:', requestBody);
                console.log('üåê Fetch URL: /admin/users/' + currentUserId + '/role');

                const response = await fetch(`/admin/users/${currentUserId}/role`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-csrf-token': csrfToken || ''
                    },
                    body: JSON.stringify(requestBody)
                });

                console.log('üì¨ Response received - Status:', response.status);

                const responseData = await response.json();
                console.log('üìã Response data:', responseData);

                if (response.ok) {
                    console.log('‚úÖ Update successful');
                    // Close modal and reload
                    editRoleModal.hide();
                    alert('User role updated successfully!');
                    setTimeout(() => location.reload(), 500);
                } else {
                    console.error('‚ùå Update failed with status', response.status);
                    alert('Error updating user role: ' + (responseData.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('‚ùå Error in saveRoles:', error);
                console.error('Error details:', error.stack);
                alert('Error: ' + error.message);
            }
        }
    </script>
</body>
</html>
