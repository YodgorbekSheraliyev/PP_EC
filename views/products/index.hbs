<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - SecureShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> header}}

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h5>Categories</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a href="/products" class="text-decoration-none {{#unless currentCategory}}fw-bold{{/unless}}">All Products</a>
                            </li>
                            {{#each categories}}
                            <li class="list-group-item">
                                <a href="/products?category={{this}}" class="text-decoration-none {{#if (eq this ../currentCategory)}}fw-bold{{/if}}">{{this}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Products</h2>
                    {{#if (eq user.role "admin")}}
                    <a href="/products/admin/new" class="btn btn-success">Add Product</a>
                    {{/if}}
                </div>

                <div class="row">
                    {{#each products}}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            {{#if image_url}}
                                <img src="{{image_url}}" class="card-img-top" alt="{{name}}" style="height: 200px; object-fit: cover;">
                            {{else}}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="text-muted">No Image</span>
                                </div>
                            {{/if}}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{name}}</h5>
                                <p class="card-text text-truncate">{{description}}</p>
                                <p class="card-text"><strong>${{price}}</strong></p>
                                <p class="card-text"><small class="text-muted">Stock: {{stock_quantity}}</small></p>
                                <div class="mt-auto">
                                    <a href="/products/{{id}}" class="btn btn-primary">View Details</a>
                                    {{#if ../user}}
                                        <button class="btn btn-success add-to-cart" data-product-id="{{id}}">Add to Cart</button>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

                {{#if (gt products.length 0)}}
                <nav aria-label="Product pagination">
                    <ul class="pagination justify-content-center">
                        {{#if (gt currentPage 1)}}
                        <li class="page-item">
                            <a class="page-link" href="/products?page={{subtract currentPage 1}}{{#if currentCategory}}&category={{currentCategory}}{{/if}}">Previous</a>
                        </li>
                        {{/if}}
                        <li class="page-item active">
                            <span class="page-link">{{currentPage}}</span>
                        </li>
                        {{#if (lt products.length 12)}}
                        <li class="page-item">
                            <a class="page-link" href="/products?page={{add currentPage 1}}{{#if currentCategory}}&category={{currentCategory}}{{/if}}">Next</a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
                {{else}}
                <div class="text-center mt-5">
                    <p class="text-muted">No products found.</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    {{> footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize cart count on page load
        async function initializeCartCount() {
            try {
                const response = await fetch('/cart/summary', {
                    credentials: 'include'
                });
                if (response.ok) {
                    const data = await response.json();
                    updateCartCount(data.itemCount);
                }
            } catch (error) {
                console.error('Error initializing cart count:', error);
            }
        }

        // Add to cart functionality
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', async (e) => {
                const productId = e.target.dataset.productId;
                try {
                    const response = await fetch('/cart/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include',
                        body: JSON.stringify({ product_id: productId, quantity: 1 })
                    });
                    const data = await response.json();
                    if (response.ok) {
                        updateCartCount(data.itemCount);
                    } else {
                        alert(data.message || 'Error adding to cart');
                    }
                } catch (error) {
                    alert('Error adding to cart');
                }
            });
        });

        function updateCartCount(count) {
            const cartCount = document.getElementById('cart-count');
            if (cartCount) {
                cartCount.textContent = count;
            }
        }

        // Initialize cart count when page loads
        document.addEventListener('DOMContentLoaded', initializeCartCount);
    </script>
</body>
</html>
